            <p>Hay <%= pluralize(@supplier.errors.count, "error") %> por eso no fue guardado</p>
            <ul>
                <% @supplier.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
